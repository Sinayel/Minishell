all:		$(NAME)

$(NAME):	
				@echo -e '\033[35mCreating Minishell... ğŸ•—\n'
				@echo $(ASCII_LOGO)
				@${CC} ${MINISHELL_SRC} ${CFLAGS} ${LDFLAGS} -o ${NAME}
				@echo -e '\033[33;32mMinishell created ! ğŸ‰\033[0m'

re: 			
				@$(RM) $(NAME)
				@echo -e '\033[0;31mMinishell deleted ! ğŸ›‘'
				$(MAKE) all

clean:
				@$(RM) $(NAME)
				@echo -e '\033[0;31mMinishell deleted ! ğŸ›‘'

fclean: clean

.PHONY: 	fclean clean re all
